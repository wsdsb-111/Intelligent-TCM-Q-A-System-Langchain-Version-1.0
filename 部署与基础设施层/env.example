# 混合检索系统环境配置示例
# 复制此文件为 .env 并修改相应的配置值

# 应用配置
APP_NAME=混合检索系统
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO

# 服务端口配置
API_PORT=8000
METRICS_PORT=8001
HEALTH_PORT=8002

# 数据库配置
# Neo4j图数据库
NEO4J_URI=neo4j://127.0.0.1:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=hx1230047
NEO4J_DATABASE=neo4j

# Chroma向量数据库
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_COLLECTION_NAME=tcm_qa_collection
CHROMA_PERSIST_DIRECTORY=./data/chroma

# Redis缓存
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# BM25配置
BM25_INDEX_PATH=./data/bm25_index/optimized_index.pkl.gz
BM25_TIMEOUT=10

# 模型配置
EMBEDDING_MODEL=BAAI/bge-base-zh
EMBEDDING_DIMENSION=768
MAX_SEQUENCE_LENGTH=512

# 检索配置
DEFAULT_TOP_K=10
DEFAULT_FUSION_METHOD=rrf
DEFAULT_TIMEOUT=30

# 性能配置
MAX_CONCURRENT_QUERIES=100
CACHE_TTL=3600
CONNECTION_POOL_SIZE=10

# 监控配置
ENABLE_METRICS=true
METRICS_INTERVAL=30
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# 安全配置
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# 日志配置
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5
LOG_FORMAT=json

# 开发配置
RELOAD=false
WORKERS=1
HOST=0.0.0.0
